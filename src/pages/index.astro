---
import Layaout from "../components/Layaout/Layaout.astro";
import Banner from "../components/Banner.astro";
import MVVCard from "../components/MVVCard.astro";
import ServiceCard from "../components/ServiceCard.astro";
import ProductCard from "../components/ProductCard.astro";
import Testimonio from "../components/Testimonio.astro";
---

<style>
    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: #00000065;
    }
</style>

<Layaout>
    <main class="flex flex-col flex-1">
        <Banner />
        <div class="relative grid gap-32 sm:gap-40 md:gap-48 lg:gap-64">
            <!--acerda de  -->
            <section class="">
                <div class="container mx-auto">
                    <MVVCard />
                    <div class="text-center">
                        <button>MÃ¡s informacion</button>
                    </div>
                </div>
            </section>
            <!-- Servicios -->
            <section class="relative">
                <div class="text-center mx-auto max-w-3xl">
                    <h2
                        class="text-5xl sm:text-6xl text-green-500 mb- px-4 max-w-3xl mb-8 md:mb-10 font-medium"
                    >
                        Servicios y Productos
                    </h2>
                    <p class="max-w-3xl px-8 text-2xl md:text-xl">
                        Lorem ipsum dolor, sit amet consectetur adipisicing
                        elit. Placeat molestias tempore necessitatibus nobis
                        maxime quo modi labore eius similique ad.
                    </p>
                </div>
                <div class="mt-12">
                    <div class="grid lg:grid-cols-4 gap-5">
                        <div class="lg:col-span-3 px-4 xl:pl-20">
                            <ServiceCard />
                            <ServiceCard />
                            <ServiceCard />
                            <ServiceCard />
                        </div>
                        <div
                            class="overflow-hidden lg:col-span-1 lg:h-full h-80 relative lg:pr-4 img-containe flex justify-center items-center"
                        >
                            <img
                                src="https://img.gruporeforma.com/imagenes/960x640/6/194/5193257.jpg"
                                alt="imagen-sobre-cultivos"
                                class="w-full h-full object-cover absolute top-0 left-0"
                            />
                            <div class="lg:hidden absolute text-center z-50 flex flex-col gap-6 items-center">
                                <h2 class="text-4xl title text-gray-200 px-4">
                                    Lorem ipsum dolor sit amet.
                                </h2>
                                <a href="#" class="text-2xl px-6 rounded-full text-center text-gray-200 bg-green-500 inline-block max-w-max py-3 mx-4 hover:bg-green-600 transition-all duration-100 ease-out hover:text-gray-100">Contactar</a>
                            </div>
                            <div class="overlay"></div>
                        </div>
                    </div>
                </div>
            </section>
            <!-- productos -->
            <section>
                <div class="text-center mx-auto max-w-3xl">
                    <h2
                        class="text-4xl sm:text-6xl text-green-500 mb- px-4 max-w-3xl mb-8 md:mb-10 font-medium"
                    >
                        Nuestros Productos
                    </h2>
                    <p class="max-w-3xl px-8 text-xl md:text-xl">
                        Lorem ipsum dolor, sit amet consectetur adipisicing
                        elit. Placeat molestias tempore.
                    </p>
                </div>
                <div class="mt-12">
                    <div class="mx-auto grid min-w-0 max-w-screen-xl grid-cols-1 gap-5 px-4 sm:grid-cols-2 lg:grid-cols-3">
                        <ProductCard client:visible />
                        <ProductCard client:visible />
                        <ProductCard client:visible />
                        <div class="grid lg:col-span-3">
                            <ProductCard cardLg={true} />
                        </div>
                    </div>
                </div>
            </section>
            <!-- testimonios -->
            <section class="flex justify-center items-center flex-col">
                <div class="max-w-6xl mx-auto text-center">
                    <h2 class="text-5xl px-6 mb-8 font-medium">
                        Lorem ipsum dolor sit <span class="text-green-500">amet consectetur adipisicing</span> elit.
                        Pariatur, porro!
                    </h2>
                </div>
                <div
                    class="grid md:grid-cols-4 gap-4 sm:gap-6 px-4 mx-auto max-w-screen-xl mt-12"
                >
                    <Testimonio client:visible />
                    <Testimonio client:visible />
                    <Testimonio client:visible />
                    <Testimonio client:visible />
                </div>
            </section>
        </div>
    </main>
</Layaout>
